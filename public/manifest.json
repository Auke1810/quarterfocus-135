{
  "manifest_version": 3,
  "name": "QuarterFocus",
  "version": "0.2.2",
  "description": "A Chrome extension for managing tasks and time using the Pomodoro technique",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
